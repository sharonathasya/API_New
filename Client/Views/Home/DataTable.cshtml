            <button type="button" id="btnExcel" title="Export Excel" class="btn fa fa-file-excel-o btn-success btn-sm " onclick="ExportExcel();">
                Excel
            </button>
        </div>
    </div>

    <div class="card-body">
        <div class="table-responsive">
            <div class="mt-2">
                <table id="tableEmp" class="table table-hover">
                    <thead class="thead-light">
                        <tr>
                            <th scope="col">No</th>
                            <th scope="col">NIK</th>
                            <th scope="col">Nama</th>
                            <th scope="col">Phone</th>
                            <th scope="col">Salary</th>
                            <th scope="col">Gender</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody id="tableEmployee">
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

