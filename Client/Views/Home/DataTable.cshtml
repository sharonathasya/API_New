<!--Modal -->
<div class="modal fade" id="formModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" style="width:1250px;" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Form Register</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="RegistForm">
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label for="validationTooltip01">NIK</label>
                            <input type="text" class="form-control is-invalid" id="inputNIK" name="NIK" placeholder="Input your NIK">
                            <div class="invalid-tooltip">
                                NIK is empty!
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-4">
                            <label for="validationTooltip01">First Name</label>
                            <input type="text" class="form-control" id="inputFirstName" name="FirstName" placeholder="First Name">
                            <div class="invalid-tooltip">
                                First Name is empty!
                            </div>
                        </div>
                        <div class="form-group col-md-4">
                            <label for="validationTooltip01">Last Name</label>
                            <input type="text" class="form-control" id="inputLastName" name="LastName" placeholder="Last Name">
                            <div class="invalid-tooltip">
                                Last Name is empty!
                            </div>
                        </div>
                        <div class="form-group col-md-4">
                            <label for="validationTooltip01">Phone</label>
                            <div class="input-group-prepend">
                                <div class="input-group-text">+62</div>
                                <input type="text" class="form-control" id="inputPhone" name="Phone" placeholder="Phone">
                                <div class="invalid-tooltip">
                                    Phone is empty!
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-4">
                            <label for="validationTooltip01">Birth Date</label>
                            <input type="date" class="form-control" id="inputBDate" name="BirthDate">
                            <div class="invalid-tooltip">
                                Birth Date is empty!
                            </div>
                        </div>
                        <div class="form-group col-md-4">
                            <label for="validationTooltip01">Salary</label>
                            <div class="input-group-prepend">
                                <div class="input-group-text">Rp.</div>
                                <input type="text" class="form-control" id="inputSalary" name="Salary" placeholder="Salary">
                                <div class="invalid-tooltip">
                                    Salary is empty!
                                </div>
                            </div>
                        </div>
                        <div class="form-group col-md-4">
                            <label for="validationTooltip01">Gender</label>
                            <select id="inputGender" class="form-control" name="Gender" required>
                                <option value="">- Select -</option>
                                <option value="0"> Male</option>
                                <option value="1"> Female</option>
                            </select>
                            <div class="invalid-tooltip">
                                Gender is empty!
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-4">
                            <label for="validationTooltip01">Email</label>
                            <input type="email" class="form-control" id="inputEmail" name="Email" placeholder="Email">
                            <div class="invalid-tooltip">
                                Email is empty!
                            </div>
                        </div>
                        <div class="form-group col-md-4">
                            <label for="validationTooltip01">Password</label>
                            <input type="password" class="form-control" id="inputPassword" name="Password" placeholder="Password" required>
                            <div class="invalid-tooltip">
                                Password is empty!
                            </div>
                        </div>
                        <div class="form-group col-md-4">
                            <label for="validationTooltip01">Degree</label>
                            <input type="text" class="form-control" id="inputDegree" name="Degree" placeholder="Degree">
                            <div class="invalid-tooltip">
                                Degree is empty!
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-4">
                            <label for="validationTooltip01">GPA</label>
                            <input type="text" class="form-control" id="inputGPA" name="GPA" placeholder="GPA">
                            <div class="invalid-tooltip">
                                GPA is empty!
                            </div>
                        </div>
                        <div class="form-group col-md-4">
                            <label for="validationTooltip01">University</label>
                            <select id="inputUniv" class="form-control" name="University" required>
                                <option value="">- Select -</option>
                            </select>
                            <div class="invalid-tooltip">
                                University is empty!
                            </div>
                        </div>
                        <div class="form-group col-md-4">
                            <label for="validationTooltip01">Role</label>
                            <select id="inputRole" class="form-control" name="Role" required>
                                <option value="">- Select -</option>
                            </select>
                            <div class="invalid-tooltip">
                                Role is empty!
                            </div>
                        </div>

                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="submit" id="btnSubmit" form="RegistForm" class="btn btn-primary">Register</button>
            </div>

        </div>
    </div>
</div>

